	public int	convertBinaryToDecimal(int number){
		int decimalNumber;
		int position;
		decimalNumber = 0 ;
		position = 0 ;
		
		while(number > 0){
			int temp;
			temp = decimalNumber%10;
			decimalNumber = decimalNumber +(temp * pow(2,position));
			
		}
		
		return decimalNumber;
	}
	
	
