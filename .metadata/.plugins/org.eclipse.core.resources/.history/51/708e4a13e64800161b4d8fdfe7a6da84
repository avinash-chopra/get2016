/**
 * This class convert binary number into octal number 
 * i make two functions to do this
 * first make binary to decimal and then decimal to binary
 */
/**
 * @author admin
 *
 */
public class BinaryToOctal {

	/**
	 * @param args
	 */	

	public int convertBinaryToOctal(int number){
		int octalNumber;
		int decimalNumber;
		
		
		return 1;
	}
	
	
	public int	convertBinaryToDecimal(int number){
		int decimalNumber;
		int position;
		decimalNumber = 0 ;
		position = 0 ;
		while(number > 0){
			int lastDigit;
			int powerResult;
			powerResult = power(2,position);
			lastDigit = number%10;
			decimalNumber = decimalNumber + ( lastDigit * powerResult );
			number = number / 10;
			position++;
		}
		return decimalNumber;
	}
	
	public int convertDecimalToOctal(int number){
		int octalNumber;
		int remender;
		int decimalNumber;
		int position;
		
		position =0;
		octalNumber = 0;
		decimalNumber = 0 ;
		remender = 0;
		while(number > 0){
			int temp;
			int tenPower;
			tenPower = power(10, position);
			temp = number % 8;
			temp = temp * tenPower;
			octalNumber = octalNumber + temp;
			number = number / 8;
			position++;
		}
		return octalNumber;
	}
	
	public int power(int base, int exp){
		int powerResult;
		powerResult = 1;
		while(exp > 0 ){
			powerResult = powerResult * base;
			exp--;
		}
		return powerResult;
	}
	public static void main(String[] args) {
		
		
		// TODO Auto-generated method stub
		
		
		
		
		
		System.out.println(new BinaryToOctal().convertDecimalToOctal(96));
	}

}
