		System.out.println(pyramidPattern.pyramid(5, 6));
		System.out.println(pyramidPattern.pyramid(5, 7));
		System.out.println(pyramidPattern.pyramid(5, 8));
		System.out.println(pyramidPattern.pyramid(5, 9));
		while(loopVariable == 1){
			int patternSize ;
			
			/*
			 * take input from the user to get size of pattern
			 */
			//System.out.println("Enter size of pattern");
			//patternSize = pyramidPattern.inputMethod();
